--Overworld reanimation open sourced because its not good but at least its something

-- Attachments

local function Align(P0,P1,Position,Rotate)
local AlignPosition = Instance.new("AlignPosition", P0)
local AlignOrientation = Instance.new("AlignOrientation", P0)
local Attachment1 = Instance.new("Attachment", P0)
local Attachment2 = Instance.new("Attachment", P1)

-- Main Attach

AlignPosition.Attachment0,AlignPosition.Attachment1 = Attachment1,Attachment2 -- Shortcut
AlignOrientation.Attachment0,AlignOrientation.Attachment1 = Attachment1,Attachment2 -- Shortcut

-- Properties:

AlignPosition.RigidityEnabled = true
AlignOrientation.RigidityEnabled = true

-- Rotate/Position

Attachment1.Position = Position or Vector3.new(0,0,0)
Attachment1.Rotation = Rotate or Vector3.new(0,0,0)
end

--Shortcuts

local Player = game.Players.LocalPlayer
local Char = Player.Character

--making character archivable and cloning it
Char.Archivable = true

Overworld = Char:Clone()
Overworld.Parent = Char
Overworld.Name = "Old Character"

--Making ur old character invisible

for i,v in pairs(Overworld:GetChildren()) do 
	if v:IsA("BasePart") then v.Transparency = 1
	elseif 
	    v:IsA("Accessory") then v:Destroy()
	end
end

--wow no clip

game:GetService("RunService").Stepped:Connect(function()
    Humanoid.Died:Connect(function()
        return -- Breaks the script, function 'break' will not work on runservices idk why.
    end)
    for i,v in pairs(Char:GetChildren()) do
        Overworld.Humanoid:Move(Char.Humanoid.MoveDirection)
        if v:IsA("BasePart") then
            v.CanCollide = false
        end
    end
end)

game:GetService("UserInputService").JumpRequest:Connect(function()
	Overworld.Humanoid.Jump = true
	Overworld.Humanoid.Sit = false
end)

--Attaching the bodyparts

Char.Torso["Left Hip"]:Destroy()
Char.Torso["Right Hip"]:Destroy()
Char.Torso["Left Shoulder"]:Destroy()
Char.Torso["Right Shoulder"]:Destroy()
Char.HumanoidRootPart:Destroy()
function InstantAttach(P0)
    Align(Char[P0],Overworld[P0])
end
InstantAttach("Right Arm")
InstantAttach("Left Arm")
InstantAttach("Right Leg")
InstantAttach("Left Leg")
InstantAttach("Torso")


-- Netless (velocity)

game:GetService("RunService").Heartbeat:Connect(function()
    for i,v in pairs(Character:GetChildren()) do
        if v:IsA("BasePart") then v.Velocity = _G.Velocity elseif v:IsA("Accessory") then v.Handle.Velocity = _G.Velocity end
    end
end)

-- 

game.Players.LocalPlayer.Character = Overworld
game.Players.LocalPlayer.Character.Humanoid.Died:Connect(function()
Character.Humanoid:ChangeState(15) --makes ur hum die
game.Players.LocalPlayer.Character = workspace[game.Players.LocalPlayer.Name]
Overworld:Destroy()
end)
-- Camera
workspace:FindFirstChildOfClass("Camera").CameraSubject = Overworld.Humanoid
wait(0.1)
print("Overworld Reanimation Loaded!")
